{
  "compilerOptions": {
    /* === File structure === */
    "rootDir": "./",
    "outDir": "./dist",

    /* === Language and module setup === */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* === TypeScript safety === */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* === Build outputs === */
    "sourceMap": true,
    "declaration": true,

    /* === Node.js types === */
    "types": ["node", "express"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "../app"]
}
